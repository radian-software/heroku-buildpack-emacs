#!/bin/bash

# Usage: bin/compile BUILD_DIR CACHE_DIR ENV_DIR

set -e
set -o pipefail

BUILD_DIR=$1
# CACHE_DIR=$2
# ENV_DIR=$3

indent() {
  sed -u 's/^/       /'
}

echo "-----> Install Emacs"

pushd /tmp
curl -L -O https://github.com/raxod502/heroku-buildpack-emacs/releases/download/emacs-for-heroku-26.1/emacs-for-heroku-26.1.tar.gz
mkdir -p "$BUILD_DIR/app/emacs"
tar -C "$BUILD_DIR/app/emacs" -xf emacs-for-heroku-26.1.tar.gz
popd

"$BUILD_DIR/app/emacs/bin/emacs" --version | indent

mkdir -p "$BUILD_DIR/.profile.d"
cat << "EOF" > "$BUILD_DIR/.profile.d/emacs.sh"
PATH="$PATH:/app/emacs/bin"
LANG="${LANG:-en_US.UTF-8}"
EOF
